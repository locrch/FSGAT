<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
     >

    <TextView
        android:id="@+id/menu_user_info_username_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名:"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/menu_user_info_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/menu_user_info_username_label"
        android:textColor="#ffffff"
        />

	<TextView
	    android:id="@+id/menu_user_info_level"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/menu_user_info_username"
	    android:layout_marginTop="15dp"
	    android:text="普通会员"
	    android:textColor="#ffffff" />
    
</RelativeLayout>
