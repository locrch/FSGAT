<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:clickable="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" >

        <EditText
            android:id="@+id/downgrade_user_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:editable="false"
            android:layout_toRightOf="@+id/downgrade_user_username_label" />

        <TextView
            android:id="@+id/downgrade_user_username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="用户名：" />
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" >

        <EditText
            android:id="@+id/downgrade_user_var"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/downgrade_get_var_btn"
            android:layout_toRightOf="@+id/downgrade_user_var_label" >

            
        </EditText>

        <Button
            android:id="@+id/downgrade_get_var_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/downgrade_user"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/button_orange"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="@dimen/button_textsize" />

        <TextView
            android:id="@+id/downgrade_user_var_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/downgrade_user_var"
            android:layout_alignBottom="@+id/downgrade_user_var"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="验证码：" />

    </RelativeLayout>

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

		<Button
		    android:id="@+id/downgrade_user_downgrade_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="40dp"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true"
		    android:text="取消高级会员"
		    android:background="@drawable/button_orange"
		    android:textColor="#ffffff"
		    android:textSize="@dimen/button_textsize" />

	</RelativeLayout>
    
</LinearLayout>
